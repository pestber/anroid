<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50px">
    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="24sp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the GrafoBank!"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_width="342dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="20sp"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you want to do today?"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="20px"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:id="@+id/button_GetMyData"
            android:background="@drawable/roundbutton"
            android:padding="20dp"
            android:text="Get my data"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="50px"
        android:paddingRight="5dp"
        android:layout_width="match_parent">
        <Button
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:id="@+id/trf_transferMoneys"
            android:background="@drawable/roundbutton"
            android:padding="20dp"
            android:text="Transfer money"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="50px"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:id="@+id/trf_buttonFool"
            android:background="@drawable/roundbutton"
            android:padding="20dp"
            android:text="Learn how to entertain a fool"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>
