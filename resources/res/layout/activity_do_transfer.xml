<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50px"
            android:stretchColumns="1">
            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What are my bank accounts?"/>
            </TableRow>
            <TableRow
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="10px"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:id="@+id/button_getAccounts"
                    android:background="@drawable/roundbutton"
                    android:padding="20dp"
                    android:text="Get Accounts"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:scrollbarSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50px">
                <TextView
                    android:textSize="32sp"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operate"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:id="@+id/textView_FromAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="From Account:"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editText_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="20dp"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </FrameLayout>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:id="@+id/textView_ToAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:text="To Account:"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editText_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="20dp"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </FrameLayout>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:id="@+id/textView_Amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Amount:"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/editText_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="20dp"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </FrameLayout>
            </TableRow>
            <TableRow
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="10px"
                android:paddingRight="5dp"
                android:layout_width="match_parent">
                <Button
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/wallet_bright_foreground_holo_dark"
                    android:id="@+id/button_Transfer"
                    android:background="@drawable/roundbutton"
                    android:padding="20dp"
                    android:text="Transfer"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
